{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "drone_build_number": "{{env `DRONE_BUILD_NUMBER`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "eu-west-2",
      "iam_instance_profile": "packer_builder",
      "source_ami": "ami-b1d9bd4bad07f54c",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 100,
          "volume_type": "gp2",
          "delete_on_termination": true
        },
        {
          "device_name": "xvdb",
          "volume_size": 50,
          "volume_type": "gp2",
          "delete_on_termination": true
        },
        {
          "device_name": "xvdc",
          "volume_size": 600,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ssh_username": "ec2-user",
      "instance_type": "m5.large",
      "ami_name": "dq-tableau-linux-{{user `drone_build_number`}}",
      "ami_users": [
        "483846886818",
        "337779336338"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "extra_arguments": [
        "--extra-vars", "ansible_shell_type=sh user_access_key={{user `access_key`}} secret_access_key={{user `secret_key`}}"
      ]
    }
  ]
}
