{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "region":  "{{env `AWS_DEFAULT_REGION`}}",
    "drone_build_number": "{{env `DRONE_BUILD_NUMBER`}}"
  },
  "sensitive-variables": ["access_key", "secret_key"],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "RHEL-8.*",
          "architecture": "x86_64"
        },
        "owners": [
          "309956199498"
        ],
        "most_recent": true
      },
      "run_tags":{
            "Name": "Packer Build [Tableau Linux - {{user `drone_build_number`}}]"
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 100,
          "volume_type": "gp2",
          "delete_on_termination": true
        },
        {
          "device_name": "xvdb",
          "volume_size": 50,
          "volume_type": "gp2",
          "delete_on_termination": true
        },
        {
          "device_name": "xvdc",
          "volume_size": 600,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ssh_username": "ec2-user",
      "instance_type": "m5.4xlarge",
      "ami_name": "dq-tableau-linux-{{user `drone_build_number`}}",
      "ami_users": [
        "483846886818",
        "337779336338"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "extra_arguments": [
        "--extra-vars", "ansible_shell_type=sh",
        "--ssh-extra-args", "-o IdentitiesOnly=yes -o 'HostKeyAlgorithms=+ssh-rsa' -o 'PubkeyAcceptedAlgorithms=+ssh-rsa'",
        "--scp-extra-args", "'-O'"
      ]
    }
  ]
}
